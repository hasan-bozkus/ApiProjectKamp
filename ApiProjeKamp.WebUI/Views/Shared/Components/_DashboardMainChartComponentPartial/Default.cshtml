@using Newtonsoft.Json
@model List<ReservationChartDto>


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
<style>
    .text-big {
        font-size: 1.2rem;
        font-weight: 600;
    }
</style>

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <!-- Card Header -->
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Rezervasyon Durum Grafiği</h4>
                    <div class="card-header-action">
                        <div class="btn-group">
                            <button type="button" class="btn btn-warning dropdown-toggle" data-bs-toggle="dropdown">
                                Seçenekler
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#"><i class="fas fa-eye"></i> View</a></li>
                                <li><a class="dropdown-item" href="#"><i class="far fa-edit"></i> Edit</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" href="#"><i class="far fa-trash-alt"></i> Delete</a></li>
                            </ul>
                        </div>
                        <a href="/Reservation/ReservationList/" class="btn btn-primary ms-2">Tümünü Gör</a>
                    </div>
                </div>

                <!-- Card Body -->
                <div class="card-body">
                    <div class="row">
                        <!-- Chart and Earnings -->
                        <div class="col-lg-9 border-end">
                            <!-- Chart -->
                            <div class="p-3 bg-light mb-3">
                                <canvas id="reservationChart" height="100"></canvas>
                            </div>
                            <!-- Earnings -->
                            <div class="row text-center">
                                <div class="col-md-4 mb-3">
                                    <div class="p-3">
                                        <i class="fas fa-arrow-circle-up text-success"></i>
                                        <h5 class="mb-1">5000 $@* @Model.WeeklyEarnings *@</h5>
                                        <p class="text-muted mb-0">Weekly Earnings</p>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <div class="p-3">
                                        <i class="fas fa-arrow-circle-down text-warning"></i>
                                        <h5 class="mb-1">5000 $@* @Model.MonthlyEarnings *@</h5>
                                        <p class="text-muted mb-0">Monthly Earnings</p>
                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <div class="p-3">
                                        <i class="fas fa-arrow-circle-up text-success"></i>
                                        <h5 class="mb-1">5000 $@* @Model.YearlyEarnings *@</h5>
                                        <p class="text-muted mb-0">Yearly Earnings</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Stats -->
                        <div class="col-lg-3">
                            <div class="mt-4">
                                <div class="d-flex justify-content-between mb-3">
                                    <span>Total customers</span>
                                    <span><strong>@* @Model.TotalCustomers *@</strong> <sup class="text-success">+09%</sup></span>
                                </div>
                                <div class="d-flex justify-content-between mb-3">
                                    <span>Total Income</span>
                                    <span><strong>$5000 @* @Model.TotalIncome *@</strong> <sup class="text-danger">-18%</sup></span>
                                </div>
                                <div class="d-flex justify-content-between mb-3">
                                    <span>Project completed</span>
                                    <span><strong>@* @Model.ProjectCompleted *@</strong> <sup class="text-success">+16%</sup></span>
                                </div>
                                <div class="d-flex justify-content-between mb-3">
                                    <span>Total expense</span>
                                    <span><strong>$5000 @* @Model.TotalExpense *@</strong> <sup class="text-success">+09%</sup></span>
                                </div>
                                <div class="d-flex justify-content-between mb-3">
                                    <span>New Customers</span>
                                    <span><strong>@* @Model.NewCustomers *@</strong> <sup class="text-success">+22%</sup></span>
                                </div>
                            </div>
                        </div>

                    </div>
                </div> <!-- End Card Body -->

            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    const labels = @Html.Raw(JsonConvert.SerializeObject(Model.Select(x => x.Month).ToList()));
    const approved = @Html.Raw(JsonConvert.SerializeObject(Model.Select(x => x.Approved).ToList()));
    const pending = @Html.Raw(JsonConvert.SerializeObject(Model.Select(x => x.Pending).ToList()));
    const canceled = @Html.Raw(JsonConvert.SerializeObject(Model.Select(x => x.Canceled).ToList()));

    var ctx = document.getElementById('reservationChart').getContext('2d');
    new Chart(ctx, {
        type: 'line',
        data: {
            labels: labels,
            datasets: [
                {
                    label: 'Onaylandı',
                    data: approved,
                    borderColor: '#28a745',
                    backgroundColor: 'rgba(40,167,69,0.1)',
                    fill: true,
                    tension: 0.4
                },
                {
                    label: 'Onay Bekliyor',
                    data: pending,
                    borderColor: '#ffc107',
                    backgroundColor: 'rgba(255,193,7,0.1)',
                    fill: true,
                    tension: 0.4
                },
                {
                    label: 'İptal Edildi',
                    data: canceled,
                    borderColor: '#dc3545',
                    backgroundColor: 'rgba(220,53,69,0.1)',
                    fill: true,
                    tension: 0.4
                }
            ]
        },
        options: {
            responsive: true,
            plugins: {
                legend: { display: true }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: { stepSize: 5 }
                }
            }
        }
    });
</script>