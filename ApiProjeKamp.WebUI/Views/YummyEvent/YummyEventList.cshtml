@model List<ResultYummyEventDto>
@{
    ViewData["Title"] = "YummyEventList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">

                <div class="card">
                    <div class="card-header">
                        <h4>Etkinlik Organizasyonu Listesi</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Organizasyon Adı</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Fiyatı</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;

                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td> ₺@item.Price.ToString("N2")</td>
                                        <td><a href="/YummyEvent/DeleteYummyEvent/@item.YummyEventId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/YummyEvent/UpdateYummyEvent/@item.YummyEventId" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/YummyEvent/CreateYummyEvent" class="btn btn-info">Yeni Organizasyon Oluştur</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
